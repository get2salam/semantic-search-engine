# Semantic Search Engine - Configuration
# Copy to .env and adjust as needed. All variables are prefixed with SSE_.

# --- Model ---
SSE_MODEL_NAME=all-MiniLM-L6-v2
SSE_USE_FAISS=true
SSE_NORMALIZE_EMBEDDINGS=true

# --- API ---
SSE_HOST=0.0.0.0
SSE_PORT=8000
SSE_WORKERS=1
SSE_LOG_LEVEL=INFO
SSE_DEBUG=false

# --- CORS ---
# JSON list of allowed origins (use ["*"] for development)
SSE_CORS_ORIGINS=["*"]

# --- Rate Limiting ---
SSE_RATE_LIMIT_PER_MINUTE=60

# --- Limits ---
SSE_DEFAULT_TOP_K=5
SSE_MAX_TOP_K=50
SSE_MAX_BATCH_SIZE=100

# --- Persistence ---
# SSE_INDEX_PATH=./saved_indices/default
# SSE_AUTO_SAVE_PATH=./saved_indices/default
